<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Customize your theme here. -->
        <item name="android:layout_marginBottom">@dimen/margin_inner_child</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/activity_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_inner_child</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
</resources>
